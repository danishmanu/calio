        document.getElementById(`quantity_${id}`).value = quantity;
        tot_price = (quantity * parseFloat(price)).toFixed(2);
        document.getElementById(`price_${id}`).innerHTML=`${tot_price}<span>₹</span>`;
       updateCart(id,quantity,name,tot_price)
