<%- include('../partials/head.ejs') %>
<%- include('../partials/header.ejs') %>

  

  <div class="container-fluid w-100 bg-primary mt-5 ps-5 d-flex align-items-center" style="height: 10vh">
 
    <li class="breadcrumb-item" style="list-style: none;"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page" style="list-style: none; max-width: 500px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
       My Account
    </li>

</div>

<div class="container">
  <div class="row">
    
    <div class="col-lg-3">
     
      <nav class="navbar navbar-light col-lg-9 mt-5">
        <a class="navbar-brand" href="#"><h3>Brand</h3></a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#brandFilter"
          aria-controls="brandFilter"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span>+</span>
        </button>
        <div class="collapse col-lg-12" id="brandFilter">
          <ul class="navbar-nav mr-auto">
            <% brandData.forEach(element => { %>
              <li class="nav-item">
                <div class="d-flex justify-content-between align-items-center">
                  <a class="nav-link" href="#"><%= element.brand_name %></a>
                  <input type="checkbox" />
                </div>
              </li>
            <% }); %>
          </ul>
        </div>
      </nav>

      <!-- Category Filter -->
      <nav class="navbar navbar-light col-lg-9 mt-5">
        <a class="navbar-brand" href="#"><h3>Category</h3></a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#categoryFilter"
          aria-controls="brandFilter"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span>+</span>
        </button>
        <div class="collapse col-lg-12" id="categoryFilter">
          <ul class="navbar-nav mr-auto">
            <% categoryData.forEach(element => { %>
              <li class="nav-item">
                <div class="d-flex justify-content-between align-items-center">
                  <a class="nav-link" href="#"><%= element.cat_name %></a>
                  <input type="checkbox" />
                </div>
              </li>
            <% }); %>
          </ul>
        </div>
      </nav>



    </div>

    <!-- Product Cards Section -->
    <div class="col-lg-9 mt-5">
      <div class="d-flex  align-items-end justify-content-end">
     <div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle fs-4" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    Sort By
  </button>
  <ul class="dropdown-menu fs-4" aria-labelledby="dropdownMenuButton1">
    <li><a class="dropdown-item" href="/home/shop?sort=asc">Price Low to High</a></li>
    <li><a class="dropdown-item" href="/home/shop?sort=desc">Price High to Low</a></li>
    <li><a class="dropdown-item" href="/home/shop?sort=a-z">aA - zZ </a></li>
    <li><a class="dropdown-item" href="/home/shop?sort=z-a">zZ - aA </a></li>
    <li><a class="dropdown-item" href="/home/shop">Popularity</a></li>
  </ul>
</div>
</div>

      <div class="row">
        <% productData.forEach(product => { %>
          <div class="col-lg-4 col-md-6 col-sm-12 mb-4">

            <!-- <div class="col-sm-6  col-md-4 col-lg-3 ms-2 border border-1"> -->

              <div class="card">
                  <a href="/product/<%= product._id %>">
                
                  <img src="/public/uploads/<%= product.images[0] %>" class="card-img-top" alt="Product Image">
                  <div class="card-body text-center">
                      <h5 class="product-title"><%=product.name %></h5>
                      <div class="price">
                          <span>₹<%=product.price%></span>
                          <span class="text-muted">₹360</span>
                      </div>
                      <div class="rating mt-2">
                          <i class="bi bi-star-fill"></i>
                          <i class="bi bi-star-fill"></i>
                          <i class="bi bi-star-fill"></i>
                          <i class="bi bi-star-fill"></i>
                          <i class="bi bi-star-fill"></i>
                          <span class="reviews">(65)</span>
                      </div>
                  </div>
             </a>
              </div>
         
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

